@model Homework_22.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="ReturnUrl" />

    <label class="lable" asp-for="Login">Login:</label>
    <input asp-for="Login" />
    <span asp-validation-for="Login"></span>
    <br />

    <label class="lable" asp-for="Password">Password:</label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>
    <br />

    <input class="button" type="submit" value="Login" />
</form>