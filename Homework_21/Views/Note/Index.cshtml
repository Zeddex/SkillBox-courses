@using Homework_21.Models
@model List<Note>

@{
    ViewData["Title"] = "Notes list";
}

<table class="simple-little-table" cellspacing='0'>
    <tr style="font-size:20px;">
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var note in Model)
    {
        <tr>
            <th><a href="~/Note/Details/@note.Id">@note.Id</a></th>
            <th>@note.Name</th>
            <th>@note.Surname</th>
            <th>@Html.ActionLink("Edit", "Edit", note)</th>
            <th>@Html.ActionLink("Delete", "Delete", note)</th>
        </tr>
    }
</table>

<input type="button" class="btn-prim" value="Add record" onclick="location.href='@Url.Action("Add", "Note")'" />