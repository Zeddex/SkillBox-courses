@using Homework_21.Models
@model List<Note>

@{
    ViewData["Title"] = "Notes list";
}

<table class="simple-little-table" cellspacing='0'>
    <tr style="font-size:20px;">
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var note in Model)
    {
        <tr>
            <th><a href="~/Note/Details/@note.Id">@note.Id</a></th>
            <th>@note.Name</th>
            <th>@note.Surname</th>
            <th><a class="button" asp-action="Edit" asp-route-id=@note.Id>Edit</a></th>
            <th>
                <form class="form-simple" method="POST" class="action-form">
                    <button class="button" asp-action="Delete" asp-route-id="@note.Id">Delete</button>
                </form>
            </th>
        </tr>
    }
</table>

<a class="button" asp-action="Add">Add record</a>
